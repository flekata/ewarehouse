            <actionName>CUSTOM-warum</actionName>
            <displayName>warum</displayName>
            <goals>
                <goal>clean</goal>
                <goal>prepare-package</goal>
                <goal>war:exploded</goal>
                <goal>--offline</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </action>
