<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="application.xsd"
             name="realEstate-registration Application">
    <navigation label="realEstate">
        <navigation-default>
            <navigation-default-node nodeRef="realEstateRegistration" userRole="ADMIN_NAV"/>
        </navigation-default>
        <node id="realEstateRegistration"
              label="Registration" leaf="false" link="true"
              expanded="false"
              contentRef="genrepContentPageDesc"
              renderOnUserRole="ROLE_ADMIN_ACCESS,ROLE_ADMIN">
        <node id="accessRequestEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="AccessRequest"
              contentRef="accessRequestEntryDesc"/>
        </node>
        <node id="realEstatePackages"
              label="Packages" leaf="false" link="true"
              expanded="false"
              contentRef="genrepContentPageDesc"
              renderOnUserRole="ROLE_ADMIN_PACKAGE,ROLE_ADMIN">
        <node id="packagesEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="packages"
              contentRef="packagesEntryDesc"
              renderOnUserRole="ROLE_ADMIN_PACKAGE,ROLE_ADMIN"/>
        <node id="docTypesEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="docTypes"
              contentRef="docTypesDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        </node>
        <node id="UsersManagement"
              label="UsersManagement" leaf="false" link="true"
              expanded="false"
              contentRef="genrepContentPageDesc"
              renderOnUserRole="ROLE_ADMIN_USER,ROLE_ADMIN">
        <node id="genrepRole"
              label="menu.Role"
              leaf="true" link="true"
              contentRef="genrepRoleDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        <node id="genrepNavRole"
              label="menu.NavigationRole"
              leaf="true" link="true"
              contentRef="genrepNavRoleDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        <node id="genrepUserProfile"
              label="menu.UserProfile"
              leaf="true" link="true"
              contentRef="genrepUserProfileDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        <!-- <node id="genrepGroup"
              label="menu.Group"
              leaf="true" link="true"
              contentRef="genrepGroupDesc"/>-->
        <node id="genrepUser"
              label="menu.User"
              leaf="true" link="true"
              contentRef="genrepUserDesc"
              renderOnUserRole="ROLE_ADMIN_USER,ROLE_ADMIN"/>
        </node>
        <node id="Locale"
              label="Locale" leaf="false" link="true"
              expanded="false"
              contentRef="genrepContentPageDesc"
              renderOnUserRole="ROLE_ADMIN">
        <node id="countryEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="country"
              contentRef="countryEntryDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        <node id="languageEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="language"
              contentRef="languageEntryDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        <node id="localeEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="locale"
              contentRef="localeEntryDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        <node id="currencyEntry"
              expanded="false"
              link="true"
              leaf="true"
              label="currency"
              contentRef="currencyEntryDesc"
              renderOnUserRole="ROLE_ADMIN"/>
        </node>
    </navigation>
    <content>
        <content-descriptor id="genrepContentPageDesc"
                            title="Genrep Content Page" templateRef="plainContainer">
            <app-content>
                <resource-reference resourceRef="contentPage" />
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <!--legal document-->
        <content-descriptor id="accessRequestEntryDesc"
                            templateRef="genrepTabbedContainer" title="accessRequestEntry" >
            <app-content>
                <resource-reference resourceRef="accessRequestEntryResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor id="packagesEntryDesc"
                            templateRef="genrepTabbedContainer" title="packagesEntry" >
            <app-content>
                <resource-reference resourceRef="packagesEntryResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="genrepRoleDesc" title="menu.Role"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="genrepRoleResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="genrepNavRoleDesc" title="menu.NavigationRole"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="genrepNavRoleResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="genrepUserDesc" title="menu.User"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="genrepUserResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
