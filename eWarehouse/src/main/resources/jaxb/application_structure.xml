            <app-content>
                <resource-reference
                    resourceRef="genrepGroupResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>-->
        <content-descriptor
            id="docTypesDesc" title="menu.DocumentType"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="docTypesResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="countryEntryDesc" title="menu.Country"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="countryEntryResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="languageEntryDesc" title="menu.Language"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="languageEntryResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="localeEntryDesc" title="menu.Locale"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="localeEntryResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-descriptor
            id="currencyEntryDesc" title="menu.Currency"
            templateRef="genrepTabbedContainer">
            <app-content>
                <resource-reference
                    resourceRef="currencyEntryResc"/>
            </app-content>
            <help templateRef="documentationContainer"/>
        </content-descriptor>
        <content-resources>
            <resource id="contentPage"
                      path="/WEB-INF/includes/content/splash.jspx"/>
            <resource id="genrepTabbedContainer" pathType="include"
                      path="/WEB-INF/includes/genrep-templating/genrep_tabbed_container.jspx"/>
            <resource id="documentationContainer" pathType="include"
                      path="/WEB-INF/includes/templates/docView_container.jspx"/>
            <resource id="plainContainer" pathType="include"
                      path="/WEB-INF/includes/templates/plain_container.jspx"/>
            <resource id="accessRequestEntryResc" pathType="include"
                      path="/WEB-INF/includes/Registration/accessRequest.jspx" />
            <resource id="packagesEntryResc" pathType="include"
                      path="/WEB-INF/includes/Packages/packages.jspx" />
            <resource id="genrepUserResc"
                      path="/WEB-INF/includes/UsersManagement/User.jspx"/>
            <resource id="genrepRoleResc"
                      path="/WEB-INF/includes/UsersManagement/Role.jspx"/>
            <resource id="genrepNavRoleResc"
                      path="/WEB-INF/includes/UsersManagement/NavigationRole.jspx"/>
            <resource id="genrepUserProfileResc"
                      path="/WEB-INF/includes/UsersManagement/UserProfile.jspx"/>
            <!-- <resource id="genrepGroupResc"
